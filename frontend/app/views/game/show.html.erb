<h1>Let's Play!</h1>

<%# Display the question from the controller %>
<h2><%= @question_data['question'] %></h2>

<%# Create a form that will POST to the /game/answer route %>
<%= form_with url: game_answer_path, method: :post do |form| %>
    <%# Hidden field to send the feature name back to the API %>
    <%= form.hidden_field :feature, value: @question_data['feature'] %>

    <%# Buttons for the user to click %>
    <%= form.submit "Yes", name: "answer" %>
    <%= form.submit "No", name: "answer" %>
    <%= form.submit "IDK", name: "answer" %>
    <%= form.submit "Probably", name: "answer" %>
    <%= form.submit "Probably Not", name: "answer" %>
<% end %>

<hr>

<%# Display the top predictions if they exist %>
<h3>My Top Guesses:</h3>
<% if @predictions.present? %>
    <ul>
    <% @predictions.first(3).each do |prediction| %>
        <li>
        <%= prediction[0].capitalize %>
        (<%= number_to_percentage(prediction[1] * 100, precision: 1) %>)
    </li>
    <% end %>
    </ul>
<% else %>
    <p>Thinking...</p>
<% end %>